{
  "extends": "@tsconfig/node20/tsconfig.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*"
  ],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "baseUrl": "src",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true,

    "module": "ESNext", // or "ESModule"
    "target": "ESNext",
    "verbatimModuleSyntax": false
  }
}
